{
	"manifest_version": 2,
	"name": "Quick Overflow",
	"description": "Quickly solve your JavaScript errors",
	"version": "1.0",
	"browser_action": {
		"default_icon": "icon.png",
    	"default_popup": "popup.html",
    	"default_title": "click me"
	},
	"background": {
		"scripts": ["get_errors.js"],
		"persistent": false
	},
	"permissions": [
    	"activeTab",
    	"https://ajax.googleapis.com/"
  	],
  	"content_scripts": [
  		{
  			"matches": ["<all_urls>"],
  			"css": ["mystyles.css"],
  			"js": ["inject.js"]
  		}
  	]
}