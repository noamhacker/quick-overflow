{
	"manifest_version": 2,
	"name": "Quick Overflow",
	"description": "Quickly find, understand, and solve your JavaScript errors",
	"version": "1.0",
	"browser_action": {
		"default_icon": "icon3.png",
    		"default_popup": "popup.html",
    		"default_title": "enable/disable"
	},
	"icons": {
        	"48": "icon48.png",
        	"128": "icon128.png"
    	},
	"permissions": [
    		"activeTab",
    		"https://ajax.googleapis.com/",
    		"storage"
  	],
    	"web_accessible_resources": [
      		"custom.css",
      		"so-icon.png",
      		"info-icon.png"
    	],
  	"content_scripts": [
  		{
  			"matches": ["<all_urls>"],
  			"css": ["custom.css"],
  			"js": ["inject.js"],
  			"run_at": "document_start"
  		}
  	]
}
